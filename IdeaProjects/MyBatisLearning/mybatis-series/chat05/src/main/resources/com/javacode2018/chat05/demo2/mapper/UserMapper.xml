<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javacode2018.chat05.demo2.mapper.UserMapper">
    <select id="getById" resultType="com.javacode2018.chat05.demo2.model.UserModel">
        select *
        from t_user
        where id=#{value}
    </select>
    <select id="getById1" resultType="com.javacode2018.chat05.demo2.model.UserModel">
        select * from t_user where id = #{uid1} and id = #{uid2}
    </select>
</mapper>