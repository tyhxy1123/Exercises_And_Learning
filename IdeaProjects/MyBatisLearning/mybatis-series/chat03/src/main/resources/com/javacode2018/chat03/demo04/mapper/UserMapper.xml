<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javacode2018.chat03.demo04.mapper.UserMapper">
    <select id="getByName" parameterType="java.lang.String" resultType="com.javacode2018.chat03.demo04.model.UserModel">
        select * from t_user where name=#{value}
    </select>
    <select id="getByMap" resultType="com.javacode2018.chat03.demo04.model.UserModel">
        select * from t_user where id=#{id} or name=#{name}
    </select>
    <select id="getByUserFindDto" resultType="com.javacode2018.chat03.demo04.model.UserModel">
        select *
        from t_user
        where id=#{userId} or name=#{userName};
    </select>
    <select id="getByIdOrName" resultType="com.javacode2018.chat03.demo04.model.UserModel">
        select * from t_user where name=#{userName} or id=#{userId} limit 1
    </select>
    <select id="getListByIdCollection" resultType="com.javacode2018.chat03.demo04.model.UserModel">
        select * from t_user where id in (#{collection[0]},#{collection[1]})
    </select>
    <select id="getListByIdList" resultType="com.javacode2018.chat03.demo04.model.UserModel">
        select * from t_user where id in (#{list[0]}, #{collection[1]})
    </select>
    <select id="getList" resultType="com.javacode2018.chat03.demo04.model.UserModel">
        select * from t_user
    </select>

</mapper>